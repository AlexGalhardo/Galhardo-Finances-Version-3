{
	"name": "galhardo-finances-api",
	"version": "2.0.0",
	"description": "galhardo-app-api",
	"main": "dist/server.js",
	"author": "Alex Galhardo <aleexgvieira@gmail.com>",
	"license": "MIT",
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"scripts": {
		"start": "npm run build && node dist/server.js",
		"nodemon": "npx nodemon dist/server.js",
		"pm2": "npx pm2 start dist/server.js --name galhardo-app-api --interpreter node --watch",
		"dev": "concurrently \"npm run watch:compile\" \"node ./dist/server.js\"",
		"watch:compile": "npm run delete:build && swc src -w --out-dir dist",
		"watch:dev": "npx nodemon ./dist/server.js",
		"build": "npm run delete:build && swc src -d dist",
		"vitest": "vitest",
		"vitest:coverage": "vitest run --coverage",
		"fix:prettier": "npx prettier --write src/*.ts src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts tests/**/*.ts",
		"fix:lint": "npx eslint . --fix",
		"precommit": "rm -rf dist/ && npm run fix:prettier && npm run fix:lint",
		"delete:build": "rm -rf dist"
	},
	"dependencies": {
		"@apollo/server": "^4.3.1",
		"@prisma/client": "^4.9.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"fs-extra": "^11.1.0",
		"graphql": "^16.6.0",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^9.0.0",
		"pm2": "^5.2.2",
		"prisma": "^4.9.0"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.28",
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.16",
		"@types/fs-extra": "^11.0.1",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.11.18",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"c8": "^7.12.0",
		"concurrently": "^7.6.0",
		"eslint": "^8.32.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-prettier": "^4.2.1",
		"install": "^0.13.0",
		"npm": "^9.3.1",
		"prettier": "^2.8.3",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.4",
		"vitest": "^0.28.2"
	}
}
